{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "..",
    "paths": {
      "*": ["*", "lib/*"]
    }
  },
  "include": [
    "*.ts",
    "../lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 